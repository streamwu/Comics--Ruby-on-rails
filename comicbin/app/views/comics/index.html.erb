<% @comics.in_groups_of(4, false).each_with_index do |group, index| %>
  <div class="row">
    <% group.each do |comic| %>
      <div class="col-md-3">
        <!-- SHOW THE IMAGE OF THE COMIC BOOK AND MAKE THE ENTIRE IMAGE A LINK.
             ATTACH THE CLASS OF 'imag-responsive' TO THIS LINK -->
        <%= link_to  image_tag(comic.image, :class=>"img-responsive"), "/comics/#{comic.id}" %>
      </div>
    <% end %>
  </div>
<% end %>
